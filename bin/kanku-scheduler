#!/usr/bin/env perl
use strict;
use warnings;
use FindBin;
use lib "$FindBin::Bin/../lib";

use Kanku::Config;
use Kanku::Daemon::Scheduler;
use Kanku::Schema;
use Log::Log4perl;

chdir("$FindBin::Bin/..");

Kanku::Config->initialize();

Log::Log4perl->init("$FindBin::Bin/../etc/log4perl.conf");

Kanku::Daemon::Scheduler->new()->run();

exit 0;
