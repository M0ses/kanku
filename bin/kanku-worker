use strict;
use warnings;

our $VERSION = "0.0.1";
use FindBin;
use lib "$FindBin::Bin/../lib";
use Log::Log4perl;
use Kanku::Config;
use Kanku::Daemon::Worker;

Kanku::Config->initialize();
Log::Log4perl->init("$FindBin::Bin/../etc/log4perl.conf");

Kanku::Daemon::Worker->new()->run();

exit 0;
