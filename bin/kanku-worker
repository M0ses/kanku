use strict;
use warnings;

our $VERSION = "0.0.1";
use FindBin;
use lib "$FindBin::Bin/../lib";
use Log::Log4perl;
use Kanku::Worker;

Log::Log4perl->init("$FindBin::Bin/../etc/console-log.conf");

my $worker = Kanku::Worker->new();
$worker->run();

exit 0;
